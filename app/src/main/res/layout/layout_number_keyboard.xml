<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="state"
            type="Boolean"/>
        <variable
            name="activity"
            type="com.animal.scale.hodoo.activity.home.fragment.dashboard.DashBoardFragment"/>
        <variable
            name="weight"
            type="String"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/close_btn"
                android:layout_marginBottom="13dp"
                android:background="@null"
                android:rotation="45"
                android:src="@drawable/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Weight"
                android:textStyle="bold"
                android:textSize="34sp"
                android:textColor="@color/mainBlack"/>

        </LinearLayout>
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="90dp"
                android:id="@+id/kilogram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{weight + "kg"}'
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="48sp"
                android:textColor="@color/mainBlack"
                />

            <LinearLayout
                android:id="@+id/numeric_wrap"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout
                    android:id="@+id/numeric_keybord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3">
                    <Button
                        android:background="@null"
                        android:text="1"
                        android:layout_columnWeight="1"

                        />
                    <Button
                        android:background="@null"
                        android:text="2"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="3"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="4"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="5"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="6"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="7"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="8"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="9"
                        android:layout_columnWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="."
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        />
                    <Button
                        android:background="@null"
                        android:text="0"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        />
                    <ImageButton
                        android:background="@null"
                        android:src="@drawable/back"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:visibility="@{state ? View.VISIBLE : View.INVISIBLE}"
                        />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/done_btn"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/pink_btn"
            android:text="@string/compleate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="@{state ? View.VISIBLE : View.INVISIBLE}"/>

    </RelativeLayout>
</layout>