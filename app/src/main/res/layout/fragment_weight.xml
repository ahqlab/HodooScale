                        android:gravity="center_vertical|center_horizontal" />

                </LinearLayout>-->
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/week_rate_wrap"
                    android:background="@color/white"
                    android:layout_marginTop="1dp"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weight_loss_ratio_per_week_msg"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <ImageView
                            android:id="@+id/rate_arrow"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/mainRed"/>
                        <TextView
                            android:id="@+id/week_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:id="@+id/averageChart"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="#9b9b9b"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="11dp"
                        android:gravity="center_horizontal"
                        android:text="@string/weight_statistics"
                        />
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="@android:color/white">
                        <RadioGroup
                            android:id="@+id/chart_wrap"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkedButton="@id/chart_day">
                            <RadioButton
                                android:id="@+id/chart_day"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/one_day"
                                android:textColor="@drawable/custom_radio_background"
                                android:background="@drawable/custom_radio_background"
                                android:button="@null"/>
                            <RadioButton
                                android:id="@+id/chart_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/one_week"
                                android:textColor="@drawable/custom_radio_background"
                                android:background="@drawable/custom_radio_background"
                                android:button="@null"/>
                            <RadioButton
                                android:id="@+id/chart_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/one_month"
                                android:textColor="@drawable/custom_radio_background"
                                android:background="@drawable/custom_radio_background"
                                android:button="@null"/>
                        <!--    <RadioButton
                                android:id="@+id/chart_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/one_year"
                                android:textColor="@drawable/custom_radio_background"
                                android:background="@drawable/custom_radio_background"
                                android:button="@null"/>-->
                        </RadioGroup>
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart1"
                            android:layout_width="match_parent"
                            android:layout_height="238dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_below="@+id/top_buttons"
                            android:background="@color/white"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            android:visibility="invisible"
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|end"
            android:layout_margin="15sp"
            app:fabSize="normal" />

    </RelativeLayout>
</layout>