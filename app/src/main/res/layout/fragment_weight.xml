                            android:layout_height="wrap_content"
                            android:text="TIP"
                            android:textColor="@color/mainBlack"
                            android:layout_gravity="top"/>
                        <TextView
                            android:id="@+id/message_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
